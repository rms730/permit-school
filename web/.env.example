# ---------- Next.js Base (shared) ----------
# Public values for browser usage
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=replace_me
# Environment tag for UI/diagnostics ("local" | "development" | "production")
NEXT_PUBLIC_ENV=local
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Feature flags (opt-in)
NEXT_PUBLIC_GOOGLE_ONE_TAP=0

# Server-only (readable by Next API routes; not exposed to browser)
SUPABASE_SERVICE_ROLE_KEY=replace_me
HMAC_JOB_SECRET=replace_me

# Optional: Sentry/Analytics
SENTRY_DSN=
