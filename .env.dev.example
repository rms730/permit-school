# --- Supabase Cloud (Dev Project) ---
SUPABASE_URL=https://YOUR_DEV_PROJECT.supabase.co
SUPABASE_SERVICE_ROLE_KEY=REPLACE_WITH_DEV_SERVICE_ROLE_KEY
SUPABASE_ANON_KEY=REPLACE_WITH_DEV_ANON_KEY
SUPABASE_PUBLISHABLE_KEY=

# --- OpenAI (usually same across envs; consider using .env.shared for common secrets) ---
OPENAI_API_KEY=

# --- Testkit ---
TESTKIT_ON=true
TESTKIT_TOKEN=dev-ci-super-secret

# --- Dev URL (staging/preview) ---
BASE_URL=https://dev.permit-school.example

# --- CI ---
CI=true
